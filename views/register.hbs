        {{#if message}}
            <h4 class="text">{{message}}</h4>
        {{/if}}
    
    <div class="register">
        <p class="text">REGISTER</p>
    
        <form method="post" action="/auth/register">
            <label class="fontawesome-user"></label>
            <input type="text" required placeholder="Name" autocomplete="off" id="name" name="name"> 
            <label class="fontawesome-user"></label>
            <input type="email" id="email" required placeholder="Email" autocomplete="off" name="email">
            <label class="fontawesome-user"></label>
            <input type="text" required placeholder="Contact" autocomplete="off" id="contact" name="contact"> 
            <label class="fontawesome-user"></label>
            <input type="password" name="password" id="password" required placeholder="Password" autocomplete="off"> 
            <label class="fontawesome-user"></label>
            <input type="password" name="confirmPassword" id="confirmPassword" required placeholder="Confirm Password" autocomplete="off"> 
            <button type="submit">Register</button>
        </form>
    </div>
    
